    <div class="hidden space-y-6" data-section-panel="absensi">
      <div class="flex flex-col gap-4 lg:flex-row lg:items-center lg:justify-between">
        <div>
          <h3 class="text-xl font-semibold">Absensi</h3>
          <p class="text-sm text-muted">
            Ringkasan jadwal hari ini dan status sesi absensi.
          </p>
        </div>
        <div class="flex gap-2">
          <input
            type="date"
            id="absensi-date"
            class="rounded-full border border-[#e4d8c9] bg-white px-4 py-2 text-sm"
          />
          <button class="btn-ghost rounded-full px-4 py-2 text-sm" id="absensi-refresh">
            Muat
          </button>
        </div>
      </div>
      <div class="rounded-2xl bg-white p-6 shadow-panel">
        <div class="flex items-center justify-between">
          <h3 class="text-lg font-semibold">Jadwal Hari Ini</h3>
          <span class="text-xs text-muted" id="absensi-info">Belum dimuat</span>
        </div>
