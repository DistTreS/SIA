        <button class="nav-item" data-section="laporan">Laporan</button>
        <button class="nav-item" data-section="pengaturan">Pengaturan</button>
      </nav>
    </div>
    <button
      class="btn-ghost w-full border border-[#3a3028] px-4 py-2 text-sm text-latte hover:text-accent"
      id="logout-btn"
    >
      Keluar
    </button>
  </aside>

  <section class="flex-1 space-y-8 px-6 py-8 lg:px-10">
    <header class="flex flex-col gap-4 lg:flex-row lg:items-center lg:justify-between">
      <div>
        <span class="text-xs uppercase tracking-[0.2em] text-accent">Dashboard</span>
        <h2 class="text-2xl font-semibold" id="section-title">Ringkasan</h2>
      </div>
      <div class="flex items-center gap-3">
        <div class="text-right">
          <p class="text-sm font-semibold" id="user-name">Administrator</p>
          <span class="text-xs text-muted" id="user-role">Admin</span>
        </div>
        <div class="flex h-10 w-10 items-center justify-center rounded-full bg-sage text-sm font-semibold text-white">
          A
        </div>
