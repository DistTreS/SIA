          <option value="">Pilih Periode</option>
        </select>
        <button class="btn-ghost rounded-full px-4 py-2 text-sm" id="periode-refresh">
          Muat Periode
        </button>
      </div>
    </div>

    <div class="space-y-8" data-section-panel="ringkasan">
      <section class="grid gap-4 md:grid-cols-3">
        <article class="rounded-2xl bg-white p-5 shadow-panel">
          <p class="text-sm text-muted">Tendik Aktif</p>
          <h3 class="text-2xl font-semibold" id="stat-guru">--</h3>
          <span class="text-xs text-muted">Data master tendik</span>
        </article>
        <article class="rounded-2xl bg-white p-5 shadow-panel">
          <p class="text-sm text-muted">Siswa Aktif</p>
          <h3 class="text-2xl font-semibold" id="stat-siswa">--</h3>
          <span class="text-xs text-muted">Data master siswa</span>
        </article>
        <article class="rounded-2xl bg-white p-5 shadow-panel">
          <p class="text-sm text-muted">Rombel</p>
          <h3 class="text-2xl font-semibold" id="stat-rombel">--</h3>
          <span class="text-xs text-muted">Rombongan belajar</span>
        </article>
      </section>

      <section class="rounded-2xl bg-white p-6 shadow-panel">
        <div class="flex items-center justify-between">
          <h3 class="text-lg font-semibold">Aktivitas Terbaru</h3>
          <span class="text-xs text-muted">Terakhir diperbarui otomatis</span>
        </div>
        <div class="mt-4 space-y-3" id="panel-content">
          <div class="flex items-center justify-between rounded-xl bg-[#fdf7ef] px-4 py-3">
            <div>
              <p class="text-sm font-semibold">Seed data master berhasil</p>
              <span class="text-xs text-muted">
                Data guru, siswa, rombel siap digunakan.
              </span>
            </div>
            <span class="rounded-full bg-[#d7ead4] px-3 py-1 text-xs font-semibold text-[#2c5f2d]">OK</span>
          </div>
          <div class="flex items-center justify-between rounded-xl bg-[#fdf7ef] px-4 py-3">
            <div>
              <p class="text-sm font-semibold">Jadwal belum dipublikasikan</p>
              <span class="text-xs text-muted">
                Gunakan modul jadwal untuk membuat generasi baru.
              </span>
            </div>
            <span class="rounded-full bg-[#f6e1c6] px-3 py-1 text-xs font-semibold text-[#a4641b]">Tunda</span>
          </div>
          <div class="flex items-center justify-between rounded-xl bg-[#fdf7ef] px-4 py-3">
            <div>
              <p class="text-sm font-semibold">Absensi hari ini</p>
              <span class="text-xs text-muted">
                Belum ada sesi absensi dibuat.
              </span>
            </div>
            <span class="rounded-full bg-[#dbe8f4] px-3 py-1 text-xs font-semibold text-[#235a87]">Info</span>
          </div>
        </div>
      </section>
    </div>

    <div class="hidden space-y-6" data-section-panel="tendik" data-master-entity="tendik">
      <div class="flex flex-col gap-4 lg:flex-row lg:items-center lg:justify-between">
        <div>
          <h3 class="text-xl font-semibold">Tendik</h3>
          <p class="text-sm text-muted">
            Kelola data tendik, akun pengguna, dan status aktif.
          </p>
        </div>
        <div class="flex flex-wrap gap-2">
          <button
            class="rounded-full bg-accent px-4 py-2 text-sm font-semibold text-white shadow-lg shadow-accent/30 transition hover:bg-accent-dark"
            data-master-add
          >
            Tambah
          </button>
          <button
            class="btn-ghost rounded-full px-4 py-2 text-sm"
            data-import-trigger="tendik"
          >
            Impor Excel
          </button>
          <a
            class="btn-ghost rounded-full px-4 py-2 text-sm"
            href="/assets/templates/template-tendik.xlsx"
            download
          >
            Template Excel
          </a>
          <input
            type="file"
            accept=".xlsx,.xls"
            class="hidden"
            data-import-input="tendik"
          />
          <button class="btn-ghost rounded-full px-4 py-2 text-sm" data-master-refresh>
            Muat Ulang
          </button>
        </div>
      </div>
      <div class="overflow-x-auto rounded-2xl bg-white p-4 shadow-panel">
        <table class="min-w-full text-sm" data-master-table>
          <thead></thead>
          <tbody></tbody>
        </table>
      </div>
      <p class="text-sm text-muted" data-master-message></p>
    </div>

    <div
      class="hidden space-y-6"
      data-section-panel="periode-akademik"
      data-master-entity="periode-akademik"
    >
      <div class="flex flex-col gap-4 lg:flex-row lg:items-center lg:justify-between">
        <div>
          <h3 class="text-xl font-semibold">Periode Akademik</h3>
          <p class="text-sm text-muted">
            Kelola tahun ajaran dan semester aktif.
          </p>
        </div>
        <div class="flex flex-wrap gap-2">
          <button
            class="rounded-full bg-accent px-4 py-2 text-sm font-semibold text-white shadow-lg shadow-accent/30 transition hover:bg-accent-dark"
            data-master-add
          >
            Tambah
          </button>
          <button class="btn-ghost rounded-full px-4 py-2 text-sm" data-master-refresh>
            Muat Ulang
          </button>
        </div>
      </div>
      <div class="overflow-x-auto rounded-2xl bg-white p-4 shadow-panel">
        <table class="min-w-full text-sm" data-master-table>
          <thead></thead>
          <tbody></tbody>
        </table>
      </div>
      <p class="text-sm text-muted" data-master-message></p>
    </div>

    <div class="hidden space-y-6" data-section-panel="siswa" data-master-entity="siswa">
      <div class="flex flex-col gap-4 lg:flex-row lg:items-center lg:justify-between">
        <div>
          <h3 class="text-xl font-semibold">Siswa</h3>
          <p class="text-sm text-muted">
            Kelola data siswa dan status aktif.
          </p>
        </div>
        <div class="flex flex-wrap gap-2">
          <button
            class="rounded-full bg-accent px-4 py-2 text-sm font-semibold text-white shadow-lg shadow-accent/30 transition hover:bg-accent-dark"
